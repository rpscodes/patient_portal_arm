image_tag = "quay.io/skupper/patient-portal-payment-processor"

@command
def build(app):
    run("mvn package")
    run(f"podman build -t {image_tag} .")

@command
def run_(app):
    build(app)
    run(f"podman run --net host {image_tag}")

@command
def push(app):
    build(app)
    run(f"podman push {image_tag}")
